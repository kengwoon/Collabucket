<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Project Title"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:id="@+id/textViewProjectStatusHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\nProject Status: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProjectStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateOfListingHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDate of project listing: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateOfListing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date of project listing "
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="324dp" />


            <TextView
                android:id="@+id/textViewProjectSummmaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nProject summary: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProjectSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Overview of your company/project."
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewResponsibilitiesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nResponsibilities and duties: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewResponsibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Responsibilities."
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewQualificationsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nQualifications and skills: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQualifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Qualifications"
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewDurationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDuration of project: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="(DD/MM/YYYY - DD/MM/YYYY)"
                android:inputType="date"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="62dp" />


            <TextView
                android:id="@+id/textViewPayHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nMinimum amount of pay: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Base quotation(Pay)."
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="242dp" />


            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="\n\nPlease contact post owner to discuss project agreements before proceeding to collaboration form."
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                tools:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="Continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/buttonViewProfile" />

            <Button
                android:id="@+id/buttonViewProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:text="view owner profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>