<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollabView">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        tools:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:hint="Project Title"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <TextView
                android:id="@+id/textViewProjectStatusHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\nProject Status: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProjectStatus"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:hint="Project Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewOwnerHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nProject Owner:"
                android:textStyle="bold"
                android:textColor="@color/fui_bgPhone" />

            <TextView
                android:id="@+id/textViewOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="\nOwner's name: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewPartnerHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nProject freelancer:"
                android:textStyle="bold"
                android:textColor="@color/fui_bgPhone" />

            <TextView
                android:id="@+id/textViewPartner"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:hint="\nPartner's name: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateOfListingHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDate of project listing: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewDateOfListing"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="Date of project listing "
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="324dp" />

            <TextView
                android:id="@+id/textViewDateOfRequestHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDate of project request: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDateOfRequest"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="Date of project request"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="324dp" />


            <TextView
                android:id="@+id/textViewProjectSummmaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nProject summary: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProjectSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Overview of your company/project."
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewResponsibilitiesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nResponsibilities and duties: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewResponsibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Responsibilities."
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewQualificationsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nQualifications and skills: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQualifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Qualifications"
                android:inputType="textMultiLine|textLongMessage"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="91dp" />

            <TextView
                android:id="@+id/textViewDurationHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDuration of project: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="(DD/MM/YYYY - DD/MM/YYYY)"
                android:inputType="date"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="62dp" />


            <TextView
                android:id="@+id/textViewPayHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nMinimum amount of pay: "
                android:textColor="@color/fui_bgPhone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPay"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="Base quotation(Pay)."
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="242dp" />

            <TextView
                android:id="@+id/textViewMaxChangesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nMaximum number of changes that the project owner can request during the course of project, unless otherwise agreed by freelancer: "
                android:textStyle="bold"
                android:textColor="@color/fui_bgPhone" />

            <TextView
                android:id="@+id/textViewMaxChange"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ems="10"
                android:hint="Max changes "
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="324dp" />

            <TextView
                android:id="@+id/textViewWaitHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nDuring the course of the project collaboration, should i not receive any response within the number of days as stated below, i will take it as a termination of the contract and i will have the right to file a report of complain for non-response from the other party. Similarly, if i do not respond within the stated number of days, the other party has the right to file a report against me."
                android:textStyle="bold"
                android:textColor="@color/fui_bgPhone" />

            <TextView
                android:id="@+id/textViewBufferWait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Buffer Wait "
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="324dp" />


            <Button
                android:id="@+id/BackBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="BACK" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>